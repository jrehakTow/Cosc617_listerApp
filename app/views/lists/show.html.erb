<p id="notice"><%= notice %></p>
<p>
  <strong>List:</strong>
  <%= @list.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @list.description %>
</p>

<!-- items in list -->
<table>
  <strong>Items:</strong>
  <thead>
  <tr>
    <th>Name</th>
    <th>description</th>
    <th>Quantity</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <%= @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <!-- <td><%= link_to 'Show', item %></td> -->
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Item', new_item_path(@item) %> |
